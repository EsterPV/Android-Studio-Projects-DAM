<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="volver"
        android:text="Volver y reiniciar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmpates" />

    <TextView
        android:id="@+id/txtGanadas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Partidas ganadas:"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txtPerdidas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPerdidas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Partidas perdida:"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txtEmpates"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGanadas" />

    <TextView
        android:id="@+id/txtEmpates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Empates:"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPerdidas" />
</androidx.constraintlayout.widget.ConstraintLayout>